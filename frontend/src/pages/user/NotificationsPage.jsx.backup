import React from "react";
import { useDispatch, useSelector } from "react-redux";
import { Bell, MessageSquare, UserPlus, CheckCheck } from "lucide-react";

const NotificationsPage = () => {
  const dispatch = useDispatch();
  const { items, unreadCount } = useSelector((s) => s.notifications || { items: [], unreadCount: 0 });

  const markAllRead = () => dispatch({ type: "NOTIFICATIONS_MARK_ALL_READ" });

  return (
    <div className="p-4">
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center text-[#02182E]">
          <Bell className="mr-2" />
          <h1 className="text-lg font-semibold">Notifications</h1>
          {unreadCount > 0 && (
            <span className="ml-2 text-xs bg-red-500 text-white rounded-full px-2 py-0.5">{unreadCount}</span>
          )}
        </div>
        <button onClick={markAllRead} className="text-sm text-white bg-[#022F56] px-3 py-1 rounded flex items-center">
          <CheckCheck size={16} className="mr-1" /> Mark all read
        </button>
      </div>

      <div className="space-y-2">
        {items.length === 0 && (
          <div className="text-sm text-gray-500">No notifications yet</div>
        )}
        {items.map((n, idx) => (
          <div key={idx} className="bg-white border rounded p-3 flex items-start">
            <div className="mr-3 mt-0.5">
              {n.type === "friend_request" ? (
                <UserPlus className="text-[#022F56]" />
              ) : (
                <MessageSquare className="text-[#022F56]" />
              )}
            </div>
            <div className="flex-1">
              {n.type === "friend_request" ? (
                <div className="text-[#02182E]">New friend request from <span className="font-medium">{n.fromName || n.from}</span></div>
              ) : (
                <div className="text-[#02182E]"><span className="font-medium">{n.fromName || n.from}</span>: {n.text}</div>
              )}
              <div className="text-xs text-gray-500">{new Date(n.timestamp).toLocaleString()}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  );
};

export default NotificationsPage; 